{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build",
        "rootDir": "src"
    },
    "include": ["src/**/*.ts", "global.d.ts"],
    "exclude": ["node_modules"]
}
